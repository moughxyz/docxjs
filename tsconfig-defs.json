{
  "compilerOptions": {
    "module": "ES2022",
    "declaration": true,
    "declarationMap": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "pretty": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "outDir": "dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["ES2017", "dom"],
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
