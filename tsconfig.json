{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "pretty": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2017", "dom"],
    "noEmit": true
  },
  "exclude": ["node_modules"]
}
